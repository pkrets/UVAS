<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#CFD8DC" />
            <stroke
                android:width="1dp"
                android:color="#616161" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#E0E0E0"
                android:endColor="#BDBDBD"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#BDBDBD" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>