<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_launcher"
    tools:context="com.setec2015.appsetec.StartActivity">


    <ImageView
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:id="@+id/imgLogoLauncher"
        android:background="@drawable/app_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="@string/lbl_entrarButton"
        android:id="@+id/btnEntrar"
        android:background="@drawable/bg_startbutton"
        android:textSize="18dp"
        android:layout_above="@+id/btnLoginOnline"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/btnLoginOnline"
        android:background="@drawable/bg_startbutton"
        android:textSize="14sp"
        android:text="@string/lbl_loginButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:gravity="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:id="@+id/btnBDhistorico"
        android:background="@drawable/bg_startbutton"
        android:textSize="10sp"
        android:text="BD Historico"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:id="@+id/btnBDalertas"
        android:background="@drawable/bg_startbutton"
        android:textSize="10sp"
        android:text="BD Alertas"
        android:layout_above="@+id/btnBDhistorico"
        android:layout_alignStart="@+id/btnBDhistorico" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Requer ligação à Internet"
        android:textColor="#FFFFFF"
        android:id="@+id/textView"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_below="@+id/btnBDalertas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"/>


</RelativeLayout>
