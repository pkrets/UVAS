<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_launcher"
    tools:context="com.setec2015.appsetec.StartActivity">


    <ImageView
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:id="@+id/imgLogoLauncher"
        android:background="@drawable/app_logo"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_marginTop="7dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:text="@string/lbl_loginButton"
        android:id="@+id/btnLogin"
        android:background="@drawable/bg_startbutton"
        android:textSize="16dp"
        android:layout_above="@+id/btnRegistarRede"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:id="@+id/btnRegistarRede"
        android:background="@drawable/bg_startbutton"
        android:textSize="12dp"
        android:text="@string/lbl_RegistarButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
