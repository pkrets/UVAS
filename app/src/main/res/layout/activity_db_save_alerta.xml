<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Adicione linhas Ã  BD"
        android:textSize="20sp"
        android:gravity="center_horizontal" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/new_type"
            android:layout_gravity="center_horizontal"
            android:hint="1. Tipo"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/new_alert"
            android:layout_gravity="center_horizontal"
            android:hint="2. Alerta"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/new_value"
            android:layout_gravity="center_horizontal"
            android:hint="3. Valor"
            android:layout_weight="1" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/new_data"
            android:layout_gravity="center_horizontal"
            android:hint="4. Data"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Save Alerta 1"
            android:onClick="saveAlerta1"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/button1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Save Alerta 2"
            android:onClick="saveAlerta2"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/button2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Save Alerta 3"
            android:onClick="saveAlerta3"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/button3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Delete Alerta 1"
            android:onClick="deleteAllRows1"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/button4" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Delete Alerta 2"
            android:onClick="deleteAllRows2"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/button5" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Delete Alerta 3"
            android:onClick="deleteAllRows3"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/button6" />
    </LinearLayout>

</LinearLayout>

