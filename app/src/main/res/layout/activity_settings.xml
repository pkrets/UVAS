<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/primaryColor"
        android:minHeight="?attr/actionBarSize"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:theme="@style/AppTheme"
        app:popupTheme="@style/SettingsTheme" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tabBackgroundColor"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="ALERTAS"
                    android:textSize="15sp"
                    android:textColor="#37474F"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="off  "
                    android:id="@+id/txt_off"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switchAlertas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="  on"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:id="@+id/txt_on"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#37474F"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Sensores"
                        android:textSize="15sp"
                        android:textColor="#37474F"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#37474F"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="7.5dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="2">

                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:id="@+id/checkBoxTemperatura"
                            android:checked="true"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Temperatura"
                            android:textSize="14sp"
                            android:textColor="#37474F"
                            android:layout_weight="5"
                            android:gravity="center_vertical" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:text=">>"
                            android:id="@+id/btnConfigTemp"
                            android:textColor="#37474F"
                            android:background="#C5E1A5"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="10dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BDBDBD"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="2">

                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:id="@+id/checkBoxLuminosidade"
                            android:checked="true"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Luminosidade"
                            android:textSize="14sp"
                            android:textColor="#37474F"
                            android:layout_weight="5"
                            android:gravity="center_vertical" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:text=">>"
                            android:id="@+id/btnConfigLum"
                            android:textColor="#37474F"
                            android:background="#C5E1A5"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="10dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BDBDBD"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="2">

                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:id="@+id/checkBoxHumidade"
                            android:checked="true"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Humidade (solo e ar)"
                            android:textSize="14sp"
                            android:textColor="#37474F"
                            android:layout_weight="5"
                            android:gravity="center_vertical" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:text=">>"
                            android:id="@+id/btnConfigHum"
                            android:textColor="#37474F"
                            android:background="#C5E1A5"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="10dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BDBDBD"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="2">

                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:id="@+id/checkBoxPluviosidade"
                            android:checked="true"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Pluviosidade"
                            android:textSize="14sp"
                            android:textColor="#37474F"
                            android:layout_weight="5"
                            android:gravity="center_vertical" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:text=">>"
                            android:id="@+id/btnConfigPLuv"
                            android:textColor="#37474F"
                            android:background="#C5E1A5"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="10dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BDBDBD"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="2">

                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:id="@+id/checkBoxOutros"
                            android:checked="true"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text=" Outros"
                            android:textSize="14sp"
                            android:textColor="#37474F"
                            android:gravity="center_vertical"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="(falhas no GPS, nos sensores e avisos meteorológicos)"
                            android:textSize="10sp"
                            android:textColor="#37474F"
                            android:gravity="center_vertical|center_horizontal|right"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Doenças, pragas e fungos"
                        android:textSize="15sp"
                        android:textColor="#37474F"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#37474F"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15.5dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="2">

                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:id="@+id/checkBoxPraga1"
                            android:checked="false"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Míldio"
                            android:textSize="14sp"
                            android:textColor="#37474F"
                            android:layout_weight="5"
                            android:gravity="center_vertical" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:text=">>"
                            android:id="@+id/btnConfigPraga1"
                            android:textColor="#37474F"
                            android:background="#C5E1A5"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="10dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BDBDBD"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="2">

                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:id="@+id/checkBoxPraga2"
                            android:checked="false"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Oídio da Videira"
                            android:textSize="14sp"
                            android:textColor="#37474F"
                            android:layout_weight="5"
                            android:gravity="center_vertical" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:text=">>"
                            android:id="@+id/btnConfigPraga2"
                            android:textColor="#37474F"
                            android:background="#C5E1A5"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="10dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BDBDBD"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="2">

                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:id="@+id/checkBoxPraga3"
                            android:checked="false"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Podridão Cinzenta"
                            android:textSize="14sp"
                            android:textColor="#37474F"
                            android:layout_weight="5"
                            android:gravity="center_vertical" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:text=">>"
                            android:id="@+id/btnConfigPraga3"
                            android:textColor="#37474F"
                            android:background="#C5E1A5"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="10dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BDBDBD"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="2">

                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:id="@+id/checkBoxPraga4"
                            android:checked="false"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Escoriose da Videira"
                            android:textSize="14sp"
                            android:textColor="#37474F"
                            android:layout_weight="5"
                            android:gravity="center_vertical" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:text=">>"
                            android:id="@+id/btnConfigPraga4"
                            android:textColor="#37474F"
                            android:background="#C5E1A5"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="10dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="2">


                    </LinearLayout>




                    </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>