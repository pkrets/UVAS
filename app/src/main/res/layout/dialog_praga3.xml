<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/tabBackgroundColor">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="550dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="#C5E1A5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/txtPragaNome3"
            android:text="NOME"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#33691E"
            android:paddingLeft="10dp"
            android:layout_weight="8" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="OK"
            android:id="@+id/btnConfigPraga3_ok"
            android:layout_weight="2"
            android:textSize="16sp"
            android:background="#9CCC65"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#37474F"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/txtPragaDescricao3"
        android:text="DESCRIÇÃO"
        android:textSize="13sp"
        android:gravity="center_vertical|fill"
        android:layout_weight="7"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#424242" />

</LinearLayout>