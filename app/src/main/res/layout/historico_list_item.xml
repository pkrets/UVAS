<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listSensorColor">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ID"
            android:id="@+id/item_txtID"
            android:textSize="13sp"
            android:layout_weight="1"
            android:background="@drawable/list_border"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Valor 1"
            android:id="@+id/item_txtSensor1"
            android:textSize="13sp"
            android:layout_weight="4"
            android:background="@drawable/list_border"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sensor"
            android:id="@+id/item_txtSensor2"
            android:textSize="13sp"
            android:layout_weight="4"
            android:background="@drawable/list_border"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sensor"
            android:id="@+id/item_txtSensor3"
            android:textSize="13sp"
            android:layout_weight="4"
            android:background="@drawable/list_border"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sensor"
            android:id="@+id/item_txtSensor4"
            android:textSize="13sp"
            android:layout_weight="4"
            android:background="@drawable/list_border"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sensor"
            android:id="@+id/item_txtSensor5"
            android:textSize="13sp"
            android:layout_weight="4"
            android:background="@drawable/list_border"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical|center_horizontal" />



        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Data"
            android:id="@+id/item_txtDate"
            android:textSize="13sp"
            android:layout_weight="2.5"
            android:background="@drawable/list_border"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>


</RelativeLayout>