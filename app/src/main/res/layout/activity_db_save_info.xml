<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Adicione linhas Ã  BD"
        android:textSize="20sp"
        android:gravity="center_horizontal" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/new_temp"
            android:layout_gravity="center_horizontal"
            android:hint="1. Temperatura"
            android:layout_weight="1"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/new_lum"
            android:layout_gravity="center_horizontal"
            android:hint="2. Luminosidade"
            android:layout_weight="1"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/new_humSolo"
            android:layout_gravity="center_horizontal"
            android:hint="3. Humidade do solo"
            android:layout_weight="1"
            android:inputType="numberDecimal" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/new_humAr"
            android:layout_gravity="center_horizontal"
            android:hint="4. Humidade do ar"
            android:layout_weight="1"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/new_pluv"
            android:layout_gravity="center_horizontal"
            android:hint="5. Pluviosidade"
            android:layout_weight="1"
            android:inputType="numberDecimal" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/new_data"
            android:layout_gravity="center_horizontal"
            android:hint="6. Data"
            android:layout_weight="1"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Save Pandlet 1"
            android:onClick="saveData1"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/button1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Save Pandlet 2"
            android:onClick="saveData2"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/button2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Save Pandlet 3"
            android:onClick="saveData3"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/button3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Delete Pandlet 1"
            android:onClick="deleteAllRows1"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/button4" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Delete Pandlet 2"
            android:onClick="deleteAllRows2"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/button5" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Delete Pandlet 3"
            android:onClick="deleteAllRows3"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/button6" />
    </LinearLayout>

</LinearLayout>
